#packopt name "splits_hsp"
#runtime "hsp3cl"
#include "winmm.as"

sdim lf:poke lf,,10
adef="asdff"+lf+"astgrw3h\nwtegole\rkserlhge3t"+lf+"earsgh"+lf+"ergh\rsagr\nerghe\r"

sdim wordList
mes "HSP:strrep & split"
sw=timeGetTime()
repeat 1000000
	words=adef
	strrep words,"\n",lf
	strrep words,"\r",lf
	split words,lf,wordList
loop
mes timeGetTime()-sw

sdim s
foreach wordList: if cnt!0{s+=","}s+=strtrim(wordList.cnt,1,10): loop
mes s
